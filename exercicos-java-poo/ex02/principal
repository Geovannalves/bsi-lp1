    }                                      

    private void jMenu1ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        
    }                                      

    private void veriNumActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        if(numero.getText().length()>0){
               JOptionPane.showMessageDialog(null, "Número da fatura: " + numero.getText());
           } else {
               JOptionPane.showMessageDialog(null, "Campo número não pode ser vazio!");
           }
    }                                       

    private void veriDescActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if(descricao.getText().length()>0){
            JOptionPane.showMessageDialog(null, "Descrição: " + descricao.getText());
        } else {
            JOptionPane.showMessageDialog(null, "Campo descrição não pode ser vazio!");
        }
    }                                        

    private void veriQuantActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        if(quantidade.getText().length()>0){
            if(Integer.parseInt(quantidade.getText())<0){
                JOptionPane.showMessageDialog(null, "A quantidade não pode ser negativa!");
            } else{
            JOptionPane.showMessageDialog(null, "Quantidade: " + quantidade.getText());
            }
        } else {
            JOptionPane.showMessageDialog(null, "Campo quantidade não pode ser vazio!");
        }
    }                                         

    private void veriPrecoActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
         if(preco.getText().length()>0){
            if(Double.parseDouble(preco.getText())<0){
                JOptionPane.showMessageDialog(null, "O preço não pode ser negativo!");
            } else{
            JOptionPane.showMessageDialog(null, "Preço por unidade: " + preco.getText());
            }
        } else {
            JOptionPane.showMessageDialog(null, "Campo preço não pode ser vazio!");
        }
    }                                         

    private void detalhesFatActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        if(numero.getText().length()>0 && descricao.getText().length()>0
            && quantidade.getText().length()>0 && preco.getText().length()>0){
            Invoice i1 = new Invoice(numero.getText(), descricao.getText(), Integer.parseInt(quantidade.getText()), Double.parseDouble(preco.getText()));
            i1.exibirDetalhes();
            
        } else {
            JOptionPane.showMessageDialog(null, "Nenhum campo pode ser vazio!");
        }
    }                                           

    private void exitActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        
    }                                    

    private void exitMouseClicked(java.awt.event.MouseEvent evt) {                                  
        // TODO add your handling code here:
        if(JOptionPane.showConfirmDialog(null, "Deseja sair?", "Sair", JOptionPane.YES_NO_OPTION)==0){
            System.exit(0);
        }
    }                                 

